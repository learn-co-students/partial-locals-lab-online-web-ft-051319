<%= form_tag("/students", method: "get") do %>
    <%= label_tag :search %>
    <%= search_field_tag :search %>
    <%= submit_tag("Search") %>
  <% end %>

<% if @search.blank? %>
    <% @students.each do |student| %>
        <%= render partial: 'student', locals: {student: student} %>
    <% end %>
<% else %>
    <% @student_search_results.each do |student| %>
        <%= render partial: 'student', locals: {student: student} %>
    <% end %>
<% end %>